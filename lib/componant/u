            ),

            TextFormField(
              decoration: InputDecoration(
                  labelText: 'Specialite du medecin',
                  contentPadding: EdgeInsets.all(10),
                  border: OutlineInputBorder(
                      borderSide: BorderSide(width: 1, color: Colors.black12))
                      ),
            ),

            TextFormField(
              decoration: InputDecoration(
                  labelText: 'Domaine',
                  contentPadding: EdgeInsets.all(10),
                  border: OutlineInputBorder(
                      borderSide: BorderSide(width: 1, color: Colors.black12))
                      ),
            ),

            TextFormField(
              decoration: InputDecoration(
                  labelText: 'Ville de hopital',
                  contentPadding: EdgeInsets.all(10),
                  border: OutlineInputBorder(
                      borderSide: BorderSide(width: 1, color: Colors.black12))
